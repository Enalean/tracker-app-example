{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "sourceMap": false,
        "esModuleInterop": true,
        "strict": true,
        "exactOptionalPropertyTypes": true,
        "isolatedModules": true,
        "noImplicitOverride": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "lib": ["ES2022", "DOM"]
    },
    "include": ["src/**/*"]
}
